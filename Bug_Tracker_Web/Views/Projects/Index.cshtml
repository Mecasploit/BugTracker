@model List<Projects>
@{
    ViewData["Title"] = "Projects";
}

<div class="row">
    <div class="border p-3 mt-4">
        <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Projects</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Project
                </a>
            </div>
        </div>
        <br /><br />

    <table class="table table-b table-striped" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Date of creation
                </th>
                <th>
                    Description
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>

    <tbody>
            @foreach(var obj in Model)
            {
                <tr>  
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="18%">
                        @obj.DateOfCreation.ToString().Split(" ")[0]
                    </td>
                    <td width="20%">
                        @obj.Description
                    </td>
                    <td width="18%">
                        @obj.Status
                    </td>
                    <td width="24%">
                        <div class="w-10 btn btn-rouge" role="group">

                            <a asp-controller="Tickets" asp-action="Index" asp-route-id="@obj.Id"
                            style="width:80px" class="btn btn-success">Open</a>

                            <a asp-controller="Projects" asp-action="Index" asp-route-id="@obj.Id"
                            style="width:80px" class="btn btn-primary">Edit</a>

                            <a asp-controller="Projects" asp-action="Index" asp-route-id="@obj.Id"
                            style="width:80px" class="btn btn-danger">Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div/>
<div/>

</div>




