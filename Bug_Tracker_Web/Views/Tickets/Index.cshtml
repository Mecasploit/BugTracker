<div class="row">
    <div class="border p-3 mt-4">
        <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Tickets List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Ticket 
                </a>
            </div>
        </div>
        <br /><br />

    <table class="table table-b table-striped" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>
                    Issue
                </th>
                <th>
                    Priority
                </th>
                <th>
                    Date of creation
                </th>
                <th>
                    Owner
                </th>
                <th>
                    Assignee
                </th>
                <th>
                    Resolved
                </th>
                <th>
                    Status
                </th>
                @*<th>
                    Attatchments
                </th>*@
                @*<th>
                    Comments
                </th>*@
                <th/>
            </tr>
        </thead>

    <tbody>
            @foreach(var obj in Model)
            {
                <tr>  
                    <td width="11%">
                        @obj.Issue
                    </td>
                    <td width="11%">
                        @obj.Priority
                    </td>
                    <td width="11%">
                        @obj.Create.ToString().Split(" ")[0]
                    </td>
                    <td width="11%">
                        @obj.Owner
                    </td>
                    <td width="11%">
                        @obj.Assignee
                    </td>
                    <td width="11%">
                        @obj.Resolved.ToString().Split(" ")[0]
                    </td>
                    <td width="11%">
                        @obj.Status
                    </td>
                    @*<td width="11%">
                        @obj.Attachments
                    </td>
                    <td width="11%">
                        @obj.Comments
                    </td>*@
                    <td>
                        <div class="w-10 btn btn-rouge" role="group">
                            <a asp-controller="Tickets" asp-action="Index" asp-route-id="@obj.Id"
                            class="btn btn-primary">Edit</a>

                            <a asp-controller="Tickets" asp-action="Index" asp-route-id="@obj.Id"
                            class="btn btn-danger">Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>

